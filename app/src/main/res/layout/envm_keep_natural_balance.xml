<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primaryColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/border_keep_natural_balance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border_image"
            app:layout_constraintTop_toTopOf="@id/tv_keep_natural_balance"
            app:layout_constraintBottom_toBottomOf="@id/tv_keep_natural_balance"
            app:layout_constraintStart_toStartOf="@id/tv_keep_natural_balance"
            app:layout_constraintEnd_toEndOf="@id/tv_keep_natural_balance"/>

        <TextView
            android:id="@+id/tv_keep_natural_balance"
            style="@style/SecondaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="@dimen/padding_16"
            android:text="CARA MEMELIHARA KESEIMBANGAN ALAM"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_preserving_forest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_32"
            android:src="@drawable/img_preserve_forest"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_keep_natural_balance" />

        <TextView
            android:id="@+id/tv_desc_img_preserving_forest"
            style="@style/SecondaryTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Menjaga kelestarian hutan"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/img_preserving_forest"
            app:layout_constraintStart_toStartOf="@+id/img_preserving_forest"
            app:layout_constraintTop_toBottomOf="@id/img_preserving_forest" />

        <ImageView
            android:id="@+id/img_treat_waste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_treat_waste"
            app:layout_constraintEnd_toEndOf="@+id/img_recycling"
            app:layout_constraintStart_toStartOf="@+id/img_preserving_forest"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_img_recycling" />

        <TextView
            android:id="@+id/tv_desc_img_treat_waste"
            style="@style/SecondaryTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mengolah limbah sebelum dibuang"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/img_treat_waste"
            app:layout_constraintStart_toStartOf="@+id/img_treat_waste"
            app:layout_constraintTop_toBottomOf="@id/img_treat_waste" />


        <ImageView
            android:id="@+id/img_recycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_marginEnd="16dp"
            android:src="@drawable/img_recyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tv_keep_natural_balance" />

        <TextView
            android:id="@+id/tv_desc_img_recycling"
            style="@style/SecondaryTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Membuang sampah pada tempatnya"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/img_recycling"
            app:layout_constraintStart_toStartOf="@id/img_recycling"
            app:layout_constraintTop_toBottomOf="@id/img_recycling" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>