            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="@+id/tv_text_teh"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tv_text_teh" />

        <TextView
            android:id="@+id/tv_ragam_tumbuhan_indonesia"
            style="@style/ThemeTitlePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/shape_bg_subtitle"
            android:paddingHorizontal="@dimen/padding_32"
            android:paddingVertical="@dimen/padding_16"
            android:text="Kebergaman tumbuhan di indonesia berdasarkan letak ketinggiannya"
            app:layout_constraintStart_toStartOf="@+id/textView5"
