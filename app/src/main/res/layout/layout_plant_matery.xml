    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/ThemeTitleMatery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.1 menganalisis hubungan antara bentuk dan fungsi bagian tubuh ada hewan dan tumbuhan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/modal_title"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/modal_title"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="@dimen/padding_16"
            android:text="Tumbuhan"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/font_size_28"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:src="@drawable/struktur_tanaman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modal_title" />

        <View
            style="@style/LineGrassStyle"
            android:id="@+id/line_grass_akar"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_akar"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_akar"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_akar" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:id="@+id/tv_sub_akar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_32"
            android:text="Akar"
            android:textSize="48sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/desc_akar"
            style="@style/SecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:text="	Akar adalah bagian tumbuhan yang umumnya berada di dalam tanah.  Untuk beberapa jenis tumbuhan, akar juga terdapat di atas tanah bahkan menggantung. Akar berfungsi antara lain sebagai bagian yang mengokohkan tumbuhan. Jika tumbuhan tidak memiliki akar, tumbuhan akan mudah dicabut,mudah roboh ketika diterpa angin, atau hanyutterbawa air ketika turun hujan.Zat-zat mineral dan air yang dibutuhkan untuk membuat makanan diserap oleh akar dari dalam tanah. Namun, pada beberapa tumbuhan tertentu, akar tidak hanya berfungsi menyerap air dan mineral, tetapi juga berfungsi sebagai penyimpanan cadangan makanan, misalnya pada beberapa tumbuhan umbi-umbian.
Akar terbagi menjadi  dua yaitu :"
            app:layout_constraintTop_toBottomOf="@+id/line_grass_akar"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/img_bagan_akar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/image_37"
            app:layout_constraintEnd_toEndOf="@+id/desc_akar"
            app:layout_constraintStart_toStartOf="@+id/desc_akar"
            app:layout_constraintTop_toBottomOf="@id/desc_akar" />

        <View
            style="@style/LineGrassStyle"
            android:id="@+id/line_grass_batang"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_batang"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_batang"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_batang" />

        <TextView
