            app:layout_constraintEnd_toEndOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="@+id/desc_akar"
            app:layout_constraintTop_toBottomOf="@id/desc_biji" />

        <TextView
