        <TextView
            android:id="@+id/tv_daun"
            style="@style/ThemeTitlePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/shape_bg_subtitle"
            android:paddingHorizontal="@dimen/padding_32"
            android:paddingVertical="@dimen/padding_16"
            android:text="Dauh"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/fungsi_bagian_bunga" />

        <TextView
            android:id="@+id/desc_daun"
            style="@style/SecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:text="Bagian tumbuhan yang berfungsi sebagai tempat  berlangsungnya fotosintesis adalah daun. Daun banyak mengandung zat warna hijau yang disebut klorofil. Daun terdiri atas tangkai daun, tulang daun dan helai daun. Sejumlah tulang daun menyebar keseluruh bagian daun  dan mengangkut air dan mineral menuju ke helai daun"
            app:layout_constraintTop_toBottomOf="@+id/tv_daun" />

        <ImageView
            android:id="@+id/img_jenis_daun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="@+id/desc_akar"
            app:layout_constraintStart_toStartOf="@+id/desc_akar"
            app:layout_constraintTop_toBottomOf="@id/desc_daun" />

        <TextView
            android:id="@+id/tv_biji"
            style="@style/ThemeTitlePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/shape_bg_subtitle"
            android:paddingHorizontal="@dimen/padding_32"
            android:paddingVertical="@dimen/padding_16"
            android:text="Biji"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/img_jenis_daun" />

        <TextView
            android:id="@+id/desc_biji"
            style="@style/SecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
