            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/img_struktur_bunga" />

        <View
            style="@style/LineGrassStyle"
            android:id="@+id/line_grass_daun"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_daun"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_daun"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_daun" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:id="@+id/tv_sub_daun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_32"
            android:text="DAUN"
            android:textSize="48sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/fungsi_bagian_bunga" />

        <TextView
            android:id="@+id/desc_daun"
            style="@style/SecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:text="@string/desc_daun"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_daun" />

        <ImageView
            android:id="@+id/img_jenis_daun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/img_jenis_daun"
            app:layout_constraintEnd_toEndOf="@+id/desc_akar"
            app:layout_constraintStart_toStartOf="@+id/desc_akar"
            app:layout_constraintTop_toBottomOf="@id/desc_daun" />

        <View
            style="@style/LineGrassStyle"
            android:id="@+id/line_grass_biji"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_biji"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_biji"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_biji" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:id="@+id/tv_sub_biji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
