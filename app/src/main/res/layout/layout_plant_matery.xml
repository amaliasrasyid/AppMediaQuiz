            android:textColor="@color/secondaryTextColor"
            android:padding="8dp"
            android:textAlignment="center"
            android:text="MONOKOTIL"
            android:textSize="@dimen/font_size_28"
            app:layout_constraintEnd_toEndOf="@+id/img_jenis_biji_mono"
            app:layout_constraintStart_toStartOf="@+id/img_jenis_biji_mono"
            app:layout_constraintTop_toBottomOf="@id/img_jenis_biji_mono" />

        <ImageView
            android:id="@+id/img_jenis_biji_diko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16"
            android:src="@drawable/img_biji_diko"
            app:layout_constraintEnd_toEndOf="@+id/desc_akar"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/desc_biji" />

        <TextView
            android:id="@+id/tv_dikotil"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@color/secondaryColor"
            android:textColor="@color/secondaryTextColor"
            android:padding="8dp"
            android:textAlignment="center"
            android:text="DIKOTIL"
            android:textSize="@dimen/font_size_28"
            app:layout_constraintEnd_toEndOf="@+id/img_jenis_biji_diko"
            app:layout_constraintStart_toStartOf="@+id/img_jenis_biji_diko"
            app:layout_constraintTop_toBottomOf="@id/img_jenis_biji_diko" />

        <View
            style="@style/LineGrassStyle"
            android:id="@+id/line_grass_buah"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_buah"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_buah"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_buah" />

        <TextView
            android:id="@+id/tv_sub_buah"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_32"
            android:text="BUAH"
            android:textAlignment="center"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
