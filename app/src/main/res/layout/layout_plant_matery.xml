            android:id="@+id/line_grass_bunga"
            android:background="@drawable/line_grass"
            app:layout_constraintEnd_toEndOf="@+id/tv_sub_bunga"
            app:layout_constraintStart_toStartOf="@+id/tv_sub_bunga"
            app:layout_constraintTop_toTopOf="@+id/tv_sub_bunga" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:id="@+id/tv_sub_bunga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_32"
            android:text="BUNGA"
            android:textSize="48sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/desc_batang" />

        <TextView
            android:id="@+id/desc_bunga"
