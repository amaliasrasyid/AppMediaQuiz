<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppMediaQuiz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


<!--    THEME TEXT-->
    <style name="PrimaryTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/wonder_boys</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="SecondaryTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/francois_one_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="ThemeTitlePage">

    </style>
    <style name="ThemeTextCompetencyQuiz" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/francois_one_regular</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="ThemeTextOption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="fontFamily">@font/francois_one_regular</item>
    </style>
    <style name="ThemeSecondaryTextOption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/francois_one_regular</item>
        <item name="background">@drawable/bg_quiz_option</item>
    </style>

    <style name="ThemeTitleMatery" parent="ThemeTextCompetencyQuiz">
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextTitlePage" parent="PrimaryTextStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_28</item>
    </style>
    <style name="ThemeTextAuthNote" parent="PrimaryTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>
    <!--    END THEME TEXT-->

    <!-- THEME BUTTON-->
    <style name="ThemeButtonExit">
        <item name="android:layout_width">@dimen/height_50</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/btn_exit</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="ThemeGameButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bg_button_blue</item>
    </style>

    <style name="ButtonResultOk" parent="ThemeGameButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ButtonModalAuth" parent="ThemeGameButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>
    <!-- END THEME BUTTON-->


    <!--    THEME PAGE -->
    <style name="ThemeGameButtonMaterial" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bg_button_blue</item>
    </style>

    <style name="ThemeBackground">
        <item name="android:background">@drawable/modal_text</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
    </style>

    <style name="ThemePage" parent="ThemeBackground">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="ThemeResultPage">
<!--        <item name="android:layout_width">wrap_content</item>-->
<!--        <item name="android:layout_height">wrap_content</item>-->
<!--        <item name="android:minWidth">250dp</item>-->
<!--        <item name="minHeight">270dp</item>-->
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:src">@drawable/modal_result</item>
    </style>

    <style name="ThemeAuthPage" parent="ThemeBackground">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>
    <!--    END THEME PAGE -->

    <style name="ThemeInputField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_32</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:fontFamily">@font/francois_one_regular</item>
    </style>

    <style name="ThemeGameEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContextScrollPage">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:layout_marginTop">66dp</item>
        <item name="android:layout_marginBottom">45dp</item>
    </style>

    <style name="ContentPage" parent="ContextScrollPage"/>

    <style name="AuthScrollPage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
    </style>

    <style name="LineGrassStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>


</resources>